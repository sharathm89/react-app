{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-css-modules"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "block-no-empty": true,
    "no-extra-semicolons": true,
    "max-empty-lines": 1,
    "indentation": [
      2,
      {
        "except": ["value"],
        "severity": "error"
      }
    ],
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "blockless-after-same-name-blockless",
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ],
  }
}
